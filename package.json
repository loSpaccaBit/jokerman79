{
  "name": "casino-microservice",
  "version": "1.0.0",
  "description": "Casino Live Results Microservice for Evolution Gaming and Pragmatic Play",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:optimized": "node start-optimized.js",
    "start:production": "NODE_ENV=production node start-optimized.js",
    "start:max-perf": "node --expose-gc --max-old-space-size=8192 --max-semi-space-size=512 --optimize-for-size --use-largepages=on start-optimized.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "node test/test-connection.js",
    "test:performance": "node --expose-gc test/test-performance.js",
    "test:memory": "node --expose-gc --max-old-space-size=512 test/test-memory.js",
    "test:load": "node --expose-gc test/test-load.js",
    "lint": "echo 'Linting not configured'",
    "health": "curl -f http://localhost:4000/api/health || exit 1",
    "metrics": "curl -s http://localhost:4000/api/metrics | jq",
    "metrics:watch": "watch -n 5 'curl -s http://localhost:4000/api/metrics | jq'",
    "logs": "tail -f logs/casino-microservice.log",
    "benchmark": "node test/benchmark.js",
    "monitor": "node scripts/monitor.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "casino",
    "evolution-gaming",
    "pragmatic-play",
    "websocket",
    "microservice"
  ],
  "author": "Jokerman79",
  "license": "MIT"
}