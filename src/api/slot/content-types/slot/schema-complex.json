{
    "kind": "collectionType",
    "collectionName": "slots",
    "info": {
        "singularName": "slot",
        "pluralName": "slots",
        "displayName": "Slot",
        "description": "Casino slot machines"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "maxLength": 255
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "shortDescription": {
            "type": "string",
            "maxLength": 160
        },
        "provider": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::provider.provider",
            "inversedBy": "slots"
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "slots"
        },
        "rtp": {
            "type": "decimal",
            "min": 0,
            "max": 100
        },
        "volatility": {
            "type": "enumeration",
            "enum": [
                "low",
                "medium",
                "high",
                "very-high"
            ]
        },
        "minBet": {
            "type": "decimal",
            "min": 0
        },
        "maxBet": {
            "type": "decimal",
            "min": 0
        },
        "paylines": {
            "type": "integer",
            "min": 0
        },
        "reels": {
            "type": "integer",
            "min": 3,
            "max": 10,
            "default": 5
        },
        "rows": {
            "type": "integer",
            "min": 1,
            "max": 10,
            "default": 3
        },
        "features": {
            "type": "json"
        },
        "themes": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::theme.theme",
            "mappedBy": "slots"
        },
        "thumbnail": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "gallery": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "images",
                "videos"
            ]
        },
        "demoUrl": {
            "type": "string"
        },
        "realUrl": {
            "type": "string"
        },
        "isFeatured": {
            "type": "boolean",
            "default": false
        },
        "isPopular": {
            "type": "boolean",
            "default": false
        },
        "isNew": {
            "type": "boolean",
            "default": false
        },
        "releaseDate": {
            "type": "date"
        },
        "rating": {
            "type": "decimal",
            "min": 0,
            "max": 5
        },
        "reviewCount": {
            "type": "integer",
            "min": 0,
            "default": 0
        },
        "tags": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::tag.tag",
            "mappedBy": "slots"
        },
        "seo": {
            "type": "component",
            "repeatable": false,
            "component": "shared.seo"
        }
    }
}