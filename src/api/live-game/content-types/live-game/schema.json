{
  "kind": "collectionType",
  "collectionName": "live_games",
  "info": {
    "singularName": "live-game",
    "pluralName": "live-games",
    "displayName": "Live Game",
    "description": "Configurazione dei giochi live disponibili"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "gameId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "gameType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "ROULETTE",
        "DRAGONTIGER",
        "MEGAWHEEL",
        "SWEETBONANZA",
        "ANDARBAHAR",
        "GAMESHOW",
        "BLACKJACK",
        "BACCARAT"
      ]
    },
    "category": {
      "type": "string",
      "required": true
    },
    "provider": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "pragmatic",
        "evolution"
      ]
    },
    "tableIds": {
      "type": "json",
      "required": true
    },
    "isActive": {
      "type": "boolean"
    },
    "sortOrder": {
      "type": "integer"
    },
    "features": {
      "type": "json"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "streamingUrl": {
      "type": "string"
    },
    "resultAssets": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "assetMapping": {
      "type": "json"
    }
  }
}
