{
  "kind": "collectionType",
  "collectionName": "providers",
  "info": {
    "singularName": "provider",
    "pluralName": "providers",
    "displayName": "Provider",
    "description": "Game providers/developers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "website": {
      "type": "string"
    },
    "foundedYear": {
      "type": "integer",
      "min": 1900
    },
    "country": {
      "type": "string"
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    },
    "isVisible": {
      "type": "boolean",
      "default": true
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "licenses": {
      "type": "json"
    },
    "reviewSummary": {
      "type": "text"
    },
    "reviewPros": {
      "type": "json"
    },
    "reviewCons": {
      "type": "json"
    },
    "reviewVerdict": {
      "type": "richtext"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "slots": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::slot.slot",
      "mappedBy": "provider"
    },
    "bonuses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::provider-bonus.provider-bonus",
      "mappedBy": "provider"
    }
  }
}