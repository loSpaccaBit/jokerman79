{
    "kind": "collectionType",
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category",
        "description": "Game categories"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "maxLength": 255
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "color": {
            "type": "string",
            "maxLength": 7
        },
        "order": {
            "type": "integer",
            "min": 0,
            "default": 0
        },
        "isVisible": {
            "type": "boolean",
            "default": true
        },
        "slots": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::slot.slot",
            "mappedBy": "category"
        }
    }
}